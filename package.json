{
    "name": "apa-ui",
    "version": "0.0.1",
    "module": "index.ts",
    "dependencies": {
        "chalk": "^5.3.0",
        "commander": "^12.1.0",
        "inquirer": "^12.1.0",
        "ora": "^8.1.1",
        "typescript": "^5.7.2",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "bun-types": "^1.1.38",
        "prettier": "^3.4.1"
